# Admin Bot Configuration Example
# Скопируйте этот файл в .env и заполните своими данными

# Admin Bot Telegram Token
TELEGRAM_TOKEN=your_admin_bot_token_here

# OpenAI (for statistics and monitoring)
OPENAI_API_KEY=your_openai_api_key_here

# PostgreSQL Database (SHARED with User Bot)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=telegram_bot
DB_USER=bot_user
DB_PASSWORD=your_database_password_here

# Super Admin Telegram ID
SUPER_ADMIN_ID=your_telegram_id_here

# Admin Group for Ticket Notifications
ADMIN_CHANNEL_ID=-1001234567890
ADMIN_CHANNEL_THREAD_ID=2
ADMIN_CHANNEL_LINK=https://t.me/your_group_link

# Settings
LOG_LEVEL=INFO
MAX_WORKERS=5
