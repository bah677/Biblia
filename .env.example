# ========================================
# TELEGRAM BOTS TOKENS
# ========================================

# User Bot Token (get from @BotFather)
USER_BOT_TOKEN=your_user_bot_token_here

# Admin Bot Token (get from @BotFather)
ADMIN_BOT_TOKEN=your_admin_bot_token_here

# ========================================
# OPENAI CONFIGURATION
# ========================================

# User Bot OpenAI Key (get from platform.openai.com)
USER_OPENAI_API_KEY=your_user_openai_key_here

# Admin Bot OpenAI Key (get from platform.openai.com)
ADMIN_OPENAI_API_KEY=your_admin_openai_key_here

# OpenAI Assistant ID (create at platform.openai.com/assistants)
ASSISTANT_ID=your_assistant_id_here

# ========================================
# DATABASE CONFIGURATION (Shared)
# ========================================

DB_HOST=localhost
DB_PORT=5432
DB_NAME=telegram_bot
DB_USER=bot_user
DB_PASSWORD=your_secure_password_here

# ========================================
# ADMIN CONFIGURATION
# ========================================

# Super Admin Telegram ID (your Telegram user ID)
SUPER_ADMIN_ID=your_telegram_id_here

# Admin Channel for Ticket Notifications
ADMIN_CHANNEL_ID=-1003415479914
ADMIN_CHANNEL_THREAD_ID=2
ADMIN_CHANNEL_LINK=https://t.me/your_invite_link

# ========================================
# GENERAL SETTINGS
# ========================================

LOG_LEVEL=INFO
MAX_WORKERS=5
